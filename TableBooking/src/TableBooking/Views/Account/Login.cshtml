@using System.Threading.Tasks
@using TableBooking.Models.ViewModels.AccountViewModels

@model TableBooking.Models.ViewModels.AccountViewModels.LoginViewModel


<div class="row">
    <div class="col-xs-4"></div>
        <div class="col-xs-8">
            <form asp-controller="Account" asp-action="Login" method="post">

            <h2 class="form-signin-heading">Please sign in</h2>
            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="Login"></label>
                    <div>
                        <input asp-for="Login" class="form-control" placeholder="Enter login" />
                        <span asp-validation-for="Login"></span>
                    </div>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <div>
                    <input asp-for="Password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="Password"></span>
                </div>
            </div>

                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>

                <div>
                    <button type="submit" class="btn btn-default">Log in</button>
                </div>
           </form>
    </div>
</div>